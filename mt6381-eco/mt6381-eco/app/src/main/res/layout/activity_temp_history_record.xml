<?xml version="1.0" encoding="utf-8"?>
<com.gturedi.views.StatefulLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_temp_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin_2"
    android:paddingRight="@dimen/activity_horizontal_margin_2"
    android:showDividers="end"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <include layout="@layout/fragment_list_temp_record"/>

    <ListView
        android:id="@+id/list_tempview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >
    <ImageView
            android:id="@+id/empty_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp_no_data"
            android:layout_gravity="center"
            android:visibility="gone"
         />
     </LinearLayout>
    </LinearLayout>

</com.gturedi.views.StatefulLayout>