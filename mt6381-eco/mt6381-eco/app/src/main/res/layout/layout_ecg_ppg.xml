<?xml version="1.0" encoding="utf-8"?>
<com.gturedi.views.StatefulLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:minHeight="200dp"
    android:id="@+id/layout_stateful"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >


    <com.mediatek.mt6381eco.ui.widgets.WaveformView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarDefaultDelayBeforeFade="2000"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:scrollbarTrackHorizontal="@drawable/scrollbar_track"
        android:scrollbarTrackVertical="@drawable/scrollbar_track"
        android:scrollbars="horizontal|vertical"
        app:dataThickness="2dp"
        app:grid1Thickness="1dp"
        app:grid2Thickness="0.5dp"
        app:gridColor="#ddd"
        />
    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="10~12s"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Label"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/txt_ecg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/ecg_title"
          android:textColor="@color/ecg_color"
          android:textStyle="bold"
          android:layout_marginEnd="8dp"
          />
      <TextView
          android:id="@+id/txt_ppg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/ppg_title"
          android:textColor="@color/ppg_color"
          android:textStyle="bold"
          />
    </LinearLayout>
  </RelativeLayout>
</com.gturedi.views.StatefulLayout>